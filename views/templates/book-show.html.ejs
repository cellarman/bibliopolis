<div ng-repeat="book in user.books">
	<div class="list-group-item">
		<div class="row">
		<div class="col-md-4">
	<img class="book-pic" src="{{book.img}}" alt="" />
	<input ng-show="editing" ng-model="book.img" name="img" type="text" class="form-control input-md" placeholder="Image URL">
</div>
		<div class="col-md-8">
		<h4>{{book.title}}</h4>
		<input ng-show="editing" ng-model="book.title" name="title" type="text" class="form-control input-md" placeholder="Title">
		by: {{book.author}} <br>
		<input ng-show="editing" ng-model="book.author" name="author" type="text" class="form-control input-md" placeholder="Author">
		For ages: {{book.ageRange}}
		<input ng-show="editing" ng-model="book.ageRange" name="ageRange" type="text" class="form-control input-md" placeholder="Age Range">
		<br>
		<button class='btn btn-info' ng-hide="editing" ng-click="editing = true">Edit Book</button>
		<button class='btn btn-success' ng-show="editing" ng-click="editBook(book); editing = false" action="/api/books" method: "PUT">Save Changes</button>
</div>
</div>
</div>
</div>
